{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:optimized": "vite build && node scripts/extract-critical-css.js && node scripts/optimize-css.js",
        "build:production": "NODE_ENV=production vite build && node scripts/extract-critical-css.js && node scripts/optimize-css.js",
        "dev": "vite",
        "analyze-css": "node scripts/optimize-css.js",
        "extract-critical": "node scripts/extract-critical-css.js",
        "build-cache-manager": "cd nova-components/CacheManager && npm run dev",
        "build-cache-manager-prod": "cd nova-components/CacheManager && npm run prod",
        "build-maintenance-mode": "cd nova-components/MaintenanceMode && npm run dev",
        "build-maintenance-mode-prod": "cd nova-components/MaintenanceMode && npm run prod",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "@playwright/test": "^1.56.1",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "cssnano": "^7.1.2",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "postcss-import": "^16.1.1",
        "tailwindcss": "^3.1.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "@tinymce/tinymce-vue": "^6.3.0",
        "chart.js": "^4.5.1",
        "flatpickr": "^4.6.13",
        "tinymce": "^8.2.1"
    }
}
