{
  "enabled": true,
  "name": "Format PHP with Pint",
  "description": "Automatically runs Laravel Pint on saved PHP files to format them according to the project's code style",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*.php"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run `vendor/bin/pint --dirty` to format the PHP file that was just saved according to the project's code style."
  }
}