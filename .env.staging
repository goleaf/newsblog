APP_NAME=Newsblog
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_URL=https://staging.example.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database (MySQL)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=newsblog_staging
DB_USERNAME=newsblog
DB_PASSWORD=secret

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Sessions / Cache / Queue
SESSION_DRIVER=database
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# Filesystem
FILESYSTEM_DISK=s3

# AWS / S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=newsblog-staging
# Set to CloudFront domain to serve files via CDN
AWS_URL=https://dxxxcloudfrontid.cloudfront.net
AWS_USE_PATH_STYLE_ENDPOINT=false

# Static assets via CDN (optional)
ASSET_URL=https://dxxxcloudfrontid.cloudfront.net

# Sanctum
SANCTUM_STATEFUL_DOMAINS=staging.example.com
SANCTUM_TOKEN_PREFIX=

# Scout / Meilisearch
SCOUT_DRIVER=meilisearch
SCOUT_QUEUE=true
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
